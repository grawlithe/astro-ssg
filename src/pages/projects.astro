---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects</div>
  </div>
  <HorizontalCard
      title="Web Admin for creating Courses using generative AI"
      img="/post_img.webp"
      desc="A Laravel App that utilizes generative AI to create courses and quizzes associated with it. Has an API that also assesses the student's answer with ChatGPT's text and image analyzation capabilities."
      url=""
      badge="NEW"
    />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="ChatGPT-powered Chrome Extension"
    img="/post_img.webp"
    desc="Chrome Extension using ChatGPT API that displays a customizable prompt and injects the result to a textbox."
    url="https://github.com/grawlithe/test-extension"
  />
  <HorizontalCard
    title="VMS API"
    img="/post_img.webp"
    desc="Vehicle Management System API using nodejs. "
    url="https://github.com/grawling08/vms-api"
  />
  <HorizontalCard
    title="Payroll System"
    img="/post_img.webp"
    desc="Payroll System using VB.net"
    url="https://github.com/grawling08/smsi-payroll"
  />
  <HorizontalCard
    title="Agent for Payroll System"
    img="/post_img.webp"
    desc="An “agent” app that syncs local biometric and payroll data to the hr online server. Uses VB.net"
    url="https://github.com/grawling08/hrisagent"
  />

</BaseLayout>
